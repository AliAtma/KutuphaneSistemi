@using AliHaydarAtma.Entites.Model
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div style="text-align: center; color: white; background-color: #1C2E3E;margin-bottom:5px">
    <h2><b> Kategori Listesi </b></h2>
</div>
<div style="margin:15px" class="form-group">
    <table class="table table-bordered">
        <thead>
            <tr style="text-align: center; background-color: #1C2E0E;color:white">
                <th>Kategori Id</th>
                <th>Kategori Adi</th>
                <th>Aciklama</th>
                <th>Durumu</th>
                <th>Islem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ktgr in Model)
            {
                <tr>
                    <td>@ktgr.KategoriId</td>
                    <td>@ktgr.KategoriAdi</td>
                    <td>@ktgr.KategoriAciklama</td>
                    <td>@ktgr.KategoriDurumu</td>
                    <td>
                        <a class="btn btn-success" href="/Kategori/Guncelle/@ktgr.KategoriId"> Guncelle </a>
                        <a class="btn btn-danger" href="/Kategori/Sil/@ktgr.KategoriId"> Sil </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#kategoriEkleModal"> Yeni Kategori Ekle</button>

    <div class="modal fade" id="kategoriEkleModal" tabindex="-1" role="dialog" aria-labelledby="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
                    <h4 class="modal-title" id="myModalLabel">Kategori Ekle</h4>
                </div>
                <form method="post" action="/Kategori/Ekle">
                    <div class="modal-body">
                        <div class="form-group">
                            <label>
                                Kategori Adı
                            </label>

                            <input type="text" name="KategoriAdi" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>
                                Kategori Açıklama
                            </label>
                            <input type="text" name="KategoriAciklama" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">İptal Et</button>
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>